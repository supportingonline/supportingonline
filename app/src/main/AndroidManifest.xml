<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.egypt.supporting.supportingonline">
    <!-- uses-permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        tools:ignore="ProtectedPermissions" /> <!-- uses-feature -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.permission.INTERNET"
        android:required="false" />
    <uses-feature
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:required="false" />
    <uses-feature
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:required="false" />
    <uses-feature
        android:name="android.permission.RECEIVE_BOOT_COMPLETED"
        android:required="false" />
    <uses-feature
        android:name="android.permission.FOREGROUND_SERVICE"
        android:required="false" />
    <uses-feature
        android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        android:required="false" />
    <uses-feature
        android:name="android.permission.ACCESS_COARSE_LOCATION"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="n">
        <activity android:name="com.egypt.supporting.supportingonline.ContactUsActivity"></activity>
        <activity android:name="com.egypt.supporting.supportingonline.ChatFriendsActivity" />
        <activity android:name="com.egypt.supporting.supportingonline.VideoViewActivity" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.ahmed.supporting.supportingonline.Custom.CastOptionsProvider" />

        <activity android:name="com.egypt.supporting.supportingonline.AddRecevieMessageActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.ConfirmJoinGroupActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.egypt.supporting.supportingonline.WorkWithActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.PaymentsOptionsActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.egypt.supporting.supportingonline.StatementActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.egypt.supporting.supportingonline.MyprofileActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.egypt.supporting.supportingonline.OtherProfileActivity"
            android:label="@string/title_activity_other_profile_scrolling"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="com.egypt.supporting.supportingonline.GroupContentActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.CreateGroupActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" /> <!-- service -->
        <service
            android:name="com.egypt.supporting.supportingonline.Services.OnNewEmmitService"
            android:enabled="true"
            android:exported="true"
            android:process=":MyService"
            android:stopWithTask="false"
            tools:ignore="InnerclassSeparator" /> <!-- receiver service -->
        <receiver
            android:name="com.egypt.supporting.supportingonline.Services.StartMyServiceAtBootReciever"
            android:enabled="true"
            android:exported="true"
            android:label="StartMyServiceAtBootReceiver"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.egypt.supporting.supportingonline.FriendChatActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.CommentActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.egypt.supporting.supportingonline.SearchActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.WritePostActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.egypt.supporting.supportingonline.AboutUsActivity" />
        <activity android:name="com.egypt.supporting.supportingonline.MyfriendsActivity" />
        <activity
            android:name="com.egypt.supporting.supportingonline.HomeActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name="com.egypt.supporting.supportingonline.LoginActivity" />
        <activity android:name="com.egypt.supporting.supportingonline.FullImageActivity" /> <!-- main activity -->
        <activity android:name="com.egypt.supporting.supportingonline.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- cropImage -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" /> <!-- facebook -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="@string/fb_login_protocol_scheme"
                    tools:ignore="ManifestResource" />
            </intent-filter>
        </activity>
        <activity android:name="com.twitter.sdk.android.core.identity.OAuthActivity" /> <!-- uses-library for android pie -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false"
            tools:ignore="WrongManifestParent" />
    </application>

</manifest>